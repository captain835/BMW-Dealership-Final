        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMW_Dealership"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Luxury1" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#EEEEEE" BorderBrush="Transparent"/>
        <Button
            x:Name="Main"
            Click="Main_Click"
            Template="{StaticResource NoMouseOverButtonTemplate}"
            Cursor="Hand"
            Background="Transparent"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Width="350"
            Height="120"
            Margin="30,0,0,0"
            Grid.Row="0"
            BorderBrush="Transparent"
            BorderThickness="0">
            <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
                <Image Source="/Resources/BMW_Logo.png"
               Height="120"
               Width="120"
               VerticalAlignment="Center"/>
                <Image Source="/Resources/M-Logo.png"
               Height="120"
               Width="200"
               VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <TextBlock 
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            Foreground="DimGray">
            Sheer Driving <Run FontWeight="Bold">Pleasure</Run>
        </TextBlock>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="80,0"
            Orientation="Horizontal">
            <Button x:Name="Profile"
                Click="Profile_Click"
                Template="{StaticResource NoMouseOverButtonTemplate}"
                Cursor="Hand"
                BorderBrush="Transparent"
                BorderThickness="0"
                Height="70"
                Width="150"
                Background="Transparent"
                Foreground="#3b3b3b"
                FontSize="40">
                <Button.Content>
                    <TextBlock>
                        <Underline>Profile</Underline>
                    </TextBlock>
                </Button.Content>
            </Button>
        </StackPanel>

