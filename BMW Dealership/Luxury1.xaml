                <EventTrigger RoutedEvent="MouseEnter">
                    <ResumeStoryboard BeginStoryboardName="MyStoryboard"/>
                </EventTrigger>

                <EventTrigger RoutedEvent="MouseLeave">
                    <PauseStoryboard BeginStoryboardName="MyStoryboard"/>
                </EventTrigger>
